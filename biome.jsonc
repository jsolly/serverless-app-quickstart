{
	"$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": false,
		"defaultBranch": "main"
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"src/**/*.{ts,tsx,json,css,html,md}",
			"tests/**/*.{ts,tsx,json}",
			"{package.json,tsconfig.json,biome.jsonc,vitest.config.ts,vite.config.ts,*.md}"
		]
	}
}
