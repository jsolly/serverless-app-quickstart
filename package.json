{
	"name": "static-astro-website",
	"type": "module",
	"version": "0.0.1",
	"license": "MIT",
	"scripts": {
		"dev": "astro --config config/astro.config.mjs dev",
		"start": "astro --config config/astro.config.mjs dev",
		"build": "astro --config config/astro.config.mjs check && astro --config config/astro.config.mjs build && node scripts/process-html.mjs",
		"preview": "astro --config config/astro.config.mjs preview",
		"astro": "astro --config config/astro.config.mjs",
		"prepare": "if [ -z \"$CI\" ]; then husky; fi",
		"lint": "biome --config-path config/biome.json lint --no-errors-on-unmatched --files-ignore-unknown=true .",
		"lint-fix": "biome --config-path config/biome.json lint --write --no-errors-on-unmatched --files-ignore-unknown=true .",
		"format": "biome --config-path config/biome.json format --no-errors-on-unmatched --files-ignore-unknown=true --write .",
		"type-check": "tsc --noEmit -p config/tsconfig.json",
		"test": "vitest --config config/vitest.config.ts --no-watch",
		"generate-images": "node --loader ts-node/esm scripts/svg-to-png.ts",
		"clean": "rm -rf dist",
		"build:lambda": "cd shared && npm run build && cd ../functions && ./build.sh",
		"deploy:lambda": "sam build && sam deploy",
		"lint-staged": "lint-staged",
		"check": "biome check --write ."
	},
	"lint-staged": {
		"*": ["biome check --no-errors-on-unmatched --write"]
	},
	"dependencies": {
		"@astrojs/sitemap": "^3.2.1",
		"@astrojs/tailwind": "^5.1.5",
		"astro": "^5.1.9",
		"tailwindcss": "^3.4.17"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.4",
		"@biomejs/biome": "1.9.4",
		"husky": "^9.1.7",
		"lint-staged": "^15.3.0",
		"typescript": "^5.7.2",
		"vitest": "^3.0.5"
	}
}
