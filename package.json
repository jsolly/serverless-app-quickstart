{
	"name": "static-astro-website",
	"type": "module",
	"version": "0.0.1",
	"license": "MIT",
	"scripts": {
		"dev": "astro dev",
		"start": "astro dev",
		"build": "astro check && astro build",
		"preview": "astro preview",
		"astro": "astro",
		"prepare": "if [ -z \"$CI\" ]; then husky; fi",
		"lint": "biome lint --no-errors-on-unmatched",
		"format": "biome format --no-errors-on-unmatched --write",
		"test": "vitest --no-watch",
		"test:unit": "vitest --no-watch -t 'unit'",
		"check:biome": "biome check --no-errors-on-unmatched",
		"check:biome:staged:fix": "biome check --staged --no-errors-on-unmatched --write",
		"check:typescript": "tsc --noEmit",
		"check:astro": "astro check",
		"check:terraform": "terraform validate",
		"check:fix": "biome check --write",
		"clean": "rm -rf dist",
		"outdated": "npm outdated",
		"update": "npx npm-check-updates -u && npm install",
		"validate": "npm run check:biome && npm run check:typescript && npm run check:astro && npm run check:terraform"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.4",
		"@astrojs/sitemap": "^3.4.1",
		"@biomejs/biome": "^2.1.1",
		"@tailwindcss/vite": "^4.1.11",
		"astro": "^5.11.0",
		"husky": "^9.1.7",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.8.3",
		"vitest": "^3.1.4"
	}
}
