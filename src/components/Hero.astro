---
interface Props {
  isAuthenticated: boolean;
}

const { isAuthenticated } = Astro.props;
---

<div class="bg-white">
  <div class="max-w-7xl mx-auto">
    <main class="mt-16 mx-auto max-w-7xl px-4 sm:mt-20 sm:px-6 md:mt-24 lg:mt-32 lg:px-8 xl:mt-40">
      <div class="text-center">
        <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl lg:text-7xl">
          <span class="block xl:inline">Build amazing</span>
          <span class="block text-blue-600 xl:inline">serverless apps</span>
        </h1>
        <p class="mt-6 text-lg text-gray-500 sm:mt-8 sm:text-xl sm:max-w-2xl sm:mx-auto md:mt-10 md:text-2xl md:leading-relaxed">
          A modern template for building serverless applications with Astro, Supabase, and Tailwind CSS. 
          Get started in minutes with authentication, database, and beautiful UI components.
        </p>
        <div class="mt-8 sm:mt-12 sm:flex sm:justify-center">
            {isAuthenticated ? (
              <div class="rounded-md shadow">
                <a 
                  href="/" 
                  class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:py-4 md:text-lg md:px-10"
                >
                  Welcome Back
                </a>
              </div>
            ) : (
            <div class="rounded-md shadow">
              <a 
                href="/register" 
                class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:py-4 md:text-lg md:px-10"
              >
                Get started
              </a>
            </div>
          )}
          <div class="mt-3 sm:mt-0 sm:ml-3">
            <a 
              href="https://github.com/your-username/serverless-app-quickstart" 
              class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-blue-700 bg-blue-50 hover:bg-blue-100 md:py-4 md:text-lg md:px-10"
            >
              View on GitHub
            </a>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
